<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MEDT.MEDT.vistaFX.GestionPedidosController">
   <children>
      <SplitPane dividerPositions="0.4" prefHeight="400.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <items>
            <AnchorPane minHeight="0.0" minWidth="500.0" maxWidth="500.0">
               <children>
                  <Label text="Añadir Pedido" style="-fx-font-size: 18px; -fx-font-weight: bold;" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
                  <GridPane hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Nº Pedido" />
                        <Label text="NIF Cliente" GridPane.rowIndex="1" />
                        <Label text="Cód. Artículo" GridPane.rowIndex="2" />
                        <Label text="Cantidad" GridPane.rowIndex="3" />
                        <Label text="Fecha" GridPane.rowIndex="4" />
                        <TextField fx:id="numPedidoField" GridPane.columnIndex="1" />
                        <TextField fx:id="nifClienteField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="codigoArticuloField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="cantidadField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                           <children>
                              <DatePicker fx:id="fechaPicker" prefWidth="120.0" />
                              <TextField fx:id="horaField" prefWidth="70.0" promptText="HH:mm" />
                           </children>
                        </HBox>
                     </children>
                  </GridPane>
                  <Button onAction="#handleAddPedido" text="Añadir" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="10.0" />
               </children>
            </AnchorPane>
            <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Filtrar por estado:" />
                              <ComboBox fx:id="filterStatusComboBox" prefWidth="150.0" />
                              <Label text="Filtrar por cliente (NIF):" />
                              <TextField fx:id="filterClienteField" promptText="Dejar en blanco para todos" />
                           </children>
                        </HBox>
                        <TableView fx:id="pedidosTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="numPedidoColumn" prefWidth="75.0" text="Nº Pedido" />
                              <TableColumn fx:id="clienteColumn" prefWidth="120.0" text="Cliente" />
                              <TableColumn fx:id="articuloColumn" prefWidth="120.0" text="Artículo" />
                              <TableColumn fx:id="cantidadColumn" prefWidth="75.0" text="Cantidad" />
                              <TableColumn fx:id="precioTotalColumn" prefWidth="100.0" text="Precio Total" />
                              <TableColumn fx:id="fechaHoraColumn" prefWidth="120.0" text="Fecha/Hora" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button mnemonicParsing="false" onAction="#handleDeletePedido" text="Eliminar Pedido Seleccionado" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</AnchorPane>
    