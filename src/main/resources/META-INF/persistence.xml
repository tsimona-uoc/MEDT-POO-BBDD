<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">
  <persistence-unit name="default">
      <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
      <class>MEDT.MEDT.modelo.Articulo</class>
      <class>MEDT.MEDT.modelo.Cliente</class>
      <class>MEDT.MEDT.modelo.Pedido</class>

      <properties>
          <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/MEDT_POO_DDBB"/>
          <property name="jakarta.persistence.jdbc.user" value="root"/>
          <property name="jakarta.persistence.jdbc.password" value="password"/>
          <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

          <!-- ConfiguraciÃ³n de Hibernate -->
          <property name="hibernate.hbm2ddl.auto" value="update"/>
          <property name="hibernate.show_sql" value="false"/>
          <property name="hibernate.format_sql" value="false"/>
      </properties>
  </persistence-unit>
</persistence>
